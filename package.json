{
  "name": "react-tailwind-spa",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun './**/*.html'",
    "build": "bun 'App.build.ts'",
    "build:prod": "bun build --target=bun --production --outdir=dist ./server.ts",
    "start:prod": "cd ./dist && bun run server.js"
  },
  "dependencies": {
    "react": "19",
    "react-dom": "19",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "biome": "^0.3.3",
    "bun-plugin-tailwind": "^0.0.15"
  }
}